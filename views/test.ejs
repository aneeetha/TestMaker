<%- include('partials/header') %>

    <!-- <%- include('partials/options') %> -->
    <div class="containerr">
        <form class="fbform" action="/score" method="post">
            <div class="question-container" id="question-container">
                <div class="question">
                    <label>
                        <%= question.description %>      
                        </label>
                </div>
                <div class="alternatives btn-grid">
                    <button class="btn options" name="btn" value=<%=question.alternatives[0]._id %>><%= question.alternatives[0].text %></button>
                    <button class="btn options" name="btn" value=<%=question.alternatives[1]._id %>><%= question.alternatives[1].text %></button>
                    <button class="btn options" name="btn" value=<%=question.alternatives[2]._id %>><%= question.alternatives[2].text %></button>
                    <button class="btn options " name="btn" value=<%=question.alternatives[3]._id %>><%= question.alternatives[3].text %></button>
                </div>
                <div class="form-group row">
                    <div class="col-sm-10">
                        <button type="submit" class="btn btn-secondary controls">Next</button>
                    </div>
                </div>
            </div>
        </form>

    </div>


    <%- include('partials/footer') %>